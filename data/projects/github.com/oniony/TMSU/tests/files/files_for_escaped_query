#!/usr/bin/env bash

# setup

touch /tmp/tmsu/file1
tmsu tag /tmp/tmsu/file1 '<\=([!$%&!])\=>'            >/dev/null 2>&1

# test

tmsu files \\\<\\=\\\(\[\\\!\$%\&\\\!\]\\\)\\=\\\>    >|/tmp/tmsu/stdout 2>|/tmp/tmsu/stderr
tmsu files '\<\=\([\!$%&\!]\)\=\>'                    >>/tmp/tmsu/stdout 2>>/tmp/tmsu/stderr

# verify

diff /tmp/tmsu/stderr - <<EOF
EOF
if [[ $? -ne 0 ]]; then
    exit 1
fi

diff /tmp/tmsu/stdout - <<EOF
/tmp/tmsu/file1
/tmp/tmsu/file1
EOF
if [[ $? -ne 0 ]]; then
    exit 1
fi
