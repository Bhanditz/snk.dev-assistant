#!/usr/bin/env bash

# setup

mkdir /tmp/tmsu/dir1
touch /tmp/tmsu/{file4,dir1/file1}
tmsu tag --tags="aubergine" /tmp/tmsu/file4 /tmp/tmsu/dir1/file1    >/dev/null 2>&1
rm /tmp/tmsu/file4 /tmp/tmsu/dir1/file1                             >/dev/null 2>&1

# test

tmsu repair --remove --path=/tmp/tmsu/dir1                          >|/tmp/tmsu/stdout 2>|/tmp/tmsu/stderr

# verify

tmsu tags /tmp/tmsu/file4 /tmp/tmsu/dir1/file1                      >>/tmp/tmsu/stdout 2>>/tmp/tmsu/stderr

diff /tmp/tmsu/stderr - <<EOF
tmsu: /tmp/tmsu/dir1/file1: no such file
EOF
if [[ $? -ne 0 ]]; then
    exit 1
fi

diff /tmp/tmsu/stdout - <<EOF
/tmp/tmsu/dir1/file1: removed
/tmp/tmsu/file4: aubergine
EOF
if [[ $? -ne 0 ]]; then
    exit 1
fi
